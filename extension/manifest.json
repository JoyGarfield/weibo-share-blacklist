{
  "manifest_version":2,
  "name":"weibo_block",
  "version":"1.0.0",
  "description":"微博黑名单共享",
  "browser_action":{
    "default_title":"weibo-block",
    "default_popup":"/src/popup/index.html"
  },
  "background":{
     "scripts":["/src/background.js"]
  },
  "permissions":[
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*.weibo.com/*",
    "declarativeContent",
    "http://114.132.210.203:5000/*",
    "notifications"
  ],
  "content_scripts":[ 
    {
      "matches":["https://weibo.com/*"],
      "run_at":"document_end",
      "js":["/src/block.js"]
    }
  ],
  "web_accessible_resources": ["/src/block.js"],
  "externally_connectable":{
    "matches": ["*://*.weibo.com/*"]
  }
}